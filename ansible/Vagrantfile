# -*- mode: ruby -*-
# vi: set ft=ruby :

hosts = [
    [   "192.168.0.41", "s1"    ],
#    [   "192.168.0.42", "s1"    ]
]

Vagrant.configure("2") do |config|
    config.vm.box = "ubuntu/bionic64"
 #   config.vagrant.plugins = [ "vagrant-host-shell" ]

    # management host
    config.vm.define "m1" do |d|
#        d.vm.provision :host_shell, inline: 'pageant pd-master-1.ppk &'
        d.vm.hostname = "m1.szolotukhin.in.ua"
        d.vm.network :public_network, ip: "192.168.0.40"
        d.vm.provider "virtualbox" do |v|
            v.name = "m1"
            v.gui = true
            v.memory = "1024"
            v.customize ["modifyvm", :id, "--vram", "128"]
        end
        d.vm.provision :ansible_local do |v|
            v.playbook = "playbook.yml"
            v.inventory_path = 'inventory'
            v.limit = 'all'
        end
    end

    # slave hosts
    hosts.each do |h|
        ip = h[0]
        hostname = h[1]

        config.vm.define hostname do |d|
            d.vm.hostname = "%s.szolotukhin.in.ua" % hostname
            d.vm.network :public_network, ip: ip
            d.vm.provider "virtualbox" do |v|
                v.name = hostname
                v.gui = true
                v.memory = "1024"
                v.customize ["modifyvm", :id, "--vram", "128"]
            end
        end
    end

#    config.trigger.after [:up, :provision] do |trigger|
#        trigger.run = {inline: "pageant pd-master-1.ppk"}
#    end
end

